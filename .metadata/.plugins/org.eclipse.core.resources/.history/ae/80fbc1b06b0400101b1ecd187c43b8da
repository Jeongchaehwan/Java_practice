import java.util.Scanner;

public class problem1_1 {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        int choice, a, b;

        while (true) {
            System.out.println("연산을 선택하세요 (1: 덧셈, 2: 뺄셈, 3: 곱셈, 4: 나눗셈, 0: 종료): ");
            choice = scanner.nextInt();

            if (choice == 0) {
                System.out.println("프로그램을 종료합니다.");
                break;
            }
            
            System.out.println("두 개의 정수를 입력하세요: ");
            a = scanner.nextInt();
            b = scanner.nextInt();

            if (choice == 1) {
                System.out.println("결과: " + a + " + " + b + " = " + (a + b));
            } else if (choice == 2) {
                System.out.println("결과: " + a + " - " + b + " = " + (a - b));
            } else if (choice == 3) {
                System.out.println("결과: " + a + " * " + b + " = " + (a * b));
            } else if (choice == 4) {
                if (b != 0) {
                    System.out.println("결과: " + a + " / " + b + " = " + ((double) a / b));
                } else {
                    System.out.println("오류: 0으로 나눌 수 없습니다.");
                }
            } else {
                System.out.println("잘못된 입력입니다. 0~4 사이의 숫자를 입력하세요.");
            }
        }

        scanner.close();
    }
}
